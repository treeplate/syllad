class AbstractSubroutineTypeWithSpecificParameters extends AbstractSubroutineType {
  Boolean equals(Type returnTypeArg, TypeList parameterTypesArg, Boolean isVarArgsArg) {
    abstract();
  }

  Boolean parametersMatch(AbstractSubroutineTypeWithSpecificParameters other) {
    abstract();
  }

  //#override
  Boolean isSubtypeOf(Type other) {
    return super.isSubtypeOf(other)
        && (!(other is AbstractSubroutineTypeWithSpecificParameters) || parametersMatch(other as AbstractSubroutineTypeWithSpecificParameters));
  }

  //#override
