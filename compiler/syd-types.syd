  }

  //#override
  Boolean neverReferenceCounted() {
    return false;
  }

  //#override
  Null markConstructed() {
    assert(false, 'Anything type cannot be constructed.');
  }

  Null constructor(TypeRegistry typeRegistryArg) {
    super.constructor(typeRegistryArg, 'Anything');
  }
}

