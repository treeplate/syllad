class IdentifierEntity extends Object {
  Boolean isDeclared() { abstract(); }

  Type staticType() { abstract(); }

  Bucket forRead(CompiledScope scope) { abstract(); }

  ForCallResultNullable forCall(CompiledScope scope) { return null; } // if this returns null, callers are expected to call forRead() to get a function pointer and then invoke that

  BucketNullable inline(CompiledScope scope, BucketList arguments) { return null; } 

  Boolean writeable() { return false; }

  Null write(CompiledScope scope, Bucket value) { 
    assert(false, 'do not call write() on IdentifierEntities that return false from writable()');
  }

  Bucket emitCall(CompiledScope scope, ExpressionList arguments, Expression subroutineReference, SourceLocation sourceLocation) {
    // TODO assert that inlining entity here always returns null
    ForCallResultNullable subroutine = forCall(scope);
    if (subroutine != null) {
      return generateInstructionsForSubroutineCallExpression(scope, subroutine!, this, arguments, subroutineReference, sourceLocation);
    }
    Bucket bucket = scope.emitCopy(forRead(scope));
    return generateInstructionsForSubroutinePointerCallExpression(scope, bucket, arguments, subroutineReference, sourceLocation);
  }
}

class CapturedVariableIdentifierEntity extends IdentifierEntity {
  Type _staticType;
  String name;
  CompiledScope homeScope;
  Integer index;
  Boolean _writeable;

  //#override
  Boolean isDeclared() { return true; }

  //#override
  Type staticType() { return _staticType; }

  Bucket getStorageBucketPointer(CompiledScope referencingScope) {
    Bucket result = referencingScope.closureBlock;
    CompiledScope scope = referencingScope;
    while (scope != homeScope) {
      assert(scope.parent != null, 'broken CompiledScope parent chain');
      assert(!(scope is CompiledLibrary), 'escaped scope chain unexpectedly');
      scope = scope.parent!;
      // TODO: skip the extra dereference for this scope if it does NOT have a closure block (and then optimize scopes to not have closure blocks!)
      result = DereferenceWithStaticTypeBucket(
        result,
        scope.environment().integer(_gcBlockData + 8),
        ow.QWord,
        scope.environment().coreClosureType,
        LazyComment('closure block of ', scope.name),
      );
    }
    return result;
  }

  //#override
  Bucket forRead(CompiledScope scope) {
    return DereferenceWithOffsetsBucket(
      getStorageBucketPointer(scope),
      scope.environment().integer(_gcBlockData + 16 * index + 8),
      scope.environment().integer(_gcBlockData + 16 * index),
      ow.QWord,
      _staticType,
      LazyComment('captured variable ', name),
    );
  }

  //#override
  Boolean writeable() { return _writeable; }

  Null _write(CompiledScope scope, Bucket value) { 
    scope.emit(HeapUpdateInstruction(getStorageBucketPointer(scope), value, _gcBlockData + 16 * index, _staticType));
  }

  //#override
  Null write(CompiledScope scope, Bucket value) { 
    assert(_writeable, 'do not call write() on IdentifierEntities that return false from writable()');
    _write(scope, value);
  }

  Null init(CompiledScope scope, Bucket value) { 
    _write(scope, value);
  }

  Null constructor(Type staticTypeArg, String nameArg, Boolean writeableArg, CompiledScope homeScopeArg, Integer indexArg) {
    super.constructor();
    _staticType = staticTypeArg;
    name = nameArg;
    _writeable = writeableArg;
    homeScope = homeScopeArg;
    index = indexArg;
  }
}

