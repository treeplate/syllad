class VmtPointerBucket extends ConstantBucket {
  ClassType classType;

  //#override
  String commentName() {
    return concat(classType.name, 'VMT');
  }

  //#override
  Datum currentValueDatum() {
    return DataLabelDatum(classType.vmtLabel, concat('vmt of ', classType.name));
  }

